doctype html
html.full-height
  head
    meta(charset='utf8')
    base(href=base)
    title OpenPaas - Mailto
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="theme-color", content="#0C7CD5")
    script(src=base + "assets/socket.io/socket.io.js")
    style(type='text/css').
      html.full-height, html.full-height body, html.full-height body > #wrap {
        height: 100%;
      }
      .loading-spa-icon {
        animation: bounce 2s;
        animation-iteration-count: infinite;
      }

      @keyframes bounce {
        0%,
        25%,
        50%,
        75%,
        100% {
          transform: translateY(0);
        }
        40% {
          transform: translateY(-20px);
        }
        60% {
          transform: translateY(-12px);
        }
      }
  body(ng-app="linagora.esn.unifiedinbox.mailto" ng-controller="sessionInitESNController")
    #wrap(ng-include='session.template')
      include ../node_modules/esn-frontend-inbox/src/app/app-loading.pug
    script(src=base + "assets/env/openpaas.js")
